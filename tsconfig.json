{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",                     /* Specify how TypeScript looks up a file from a given module specifier. */
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "rootDir": "src",
        "useDefineForClassFields": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "jsx": "react",
    },
}
